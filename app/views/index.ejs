<!doctype html>
<html>
<head>
    <title>Welcome to the Twitter Stream</title>
</head>
<body>
    <h1><%- header %></h1>

    <div id="tweet-container"></div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      var socket = io();

      socket.on('connect', function() {
        console.log('Connected!');
      });

      socket.on('tweets', function(tweet) {
        console.log(tweet);
          var  html = '<div class="row">';
               html += '  <div class="col-md-6 col-md-offset-3 tweet">';
               html += '    <img src="' + tweet.user_profile_image + '" class="avatar pull-left"/>';
               html += '    <div class="names">'
               html += '       <span class="full-name">' + tweet.name + ' </span>';
               html += '       <span class="username">@' +tweet.screen_name + '</span>';
               html += '    </div>';
               html += '  <div class="contents">';
               html += '<span class="text">' + tweet.text + '</span>';
               html += '</div></div></div>';
              $('#tweet-container').prepend(html);


      });
</script>
</body>
</html>